{
  "editor.fontFamily": "JetBrains Mono, monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.insertSpaces": true,
  "editor.renderWhitespace": "selection",
  "editor.rulers": [
    80
  ],
  "editor.tabSize": 2,
  "files.exclude": {
    "**/build-*": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true
}
